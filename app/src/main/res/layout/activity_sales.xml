<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="14"
              tools:context="com.example.jisung.darimi.SalesActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/left_side_bar"
        android:orientation="vertical"
        android:weightSum="9">


        <ImageView
            android:id="@+id/logo"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:id="@+id/orderA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:text="주문"/>

        <TextView
            android:id="@+id/manageA"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:text="고객관리"/>

        <TextView
            android:id="@+id/salesA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@color/Key2"
            android:onClick="onClick"
            android:text="매출"/>

        <TextView
            android:id="@+id/settingA"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:text="설정"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/Background"
        android:orientation="vertical"
        android:weightSum="9">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/White"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@android:color/transparent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@android:color/transparent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@color/Key2"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:orientation="vertical"
        android:weightSum="9.2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="15">

            <TextView
                android:id="@+id/calcul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="계산기"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11.5"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="시간"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.2"
            android:background="@color/Background"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Background"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sale_start_border"
                        android:text="시작"
                        android:textColor="@color/White"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/sales_start_left_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@color/White"
                            android:onClick="onClick"
                            android:scaleType="fitXY"
                            android:src="@drawable/left_btn"/>

                        <TextView
                            android:id="@+id/sales_start_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="2017.08.04"
                            android:textSize="30sp"/>

                        <ImageButton
                            android:id="@+id/sales_start_right_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@color/White"
                            android:onClick="onClick"
                            android:scaleType="fitXY"
                            android:src="@drawable/right_btn"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sale_start_border"
                        android:text="끝"
                        android:textColor="@color/White"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/sales_finish_left_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@color/White"
                            android:onClick="onClick"
                            android:scaleType="fitXY"
                            android:src="@drawable/left_btn"/>

                        <TextView
                            android:id="@+id/sales_finish_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="2017.08.04"
                            android:textSize="30sp"/>

                        <ImageButton
                            android:id="@+id/sales_finish_right_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@color/White"
                            android:onClick="onClick"
                            android:scaleType="fitXY"
                            android:src="@drawable/right_btn"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Key2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/Key2"
                        android:text="총매출"
                        android:textColor="@color/White"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/total_sale_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/Key2"
                        android:text="100,000원"
                        android:textColor="@color/White"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@color/Background"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/sales_year_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:paddingLeft="30dp"
                                android:text="2017"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/sales_month_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="30dp"
                                        android:gravity="bottom"
                                        android:text="8"
                                        android:textSize="35sp"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:id="@+id/sales_month_tv_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="bottom"
                                        android:text="August"
                                        android:textColor="@color/DeepGray"/>

                                </LinearLayout>

                                <ImageButton
                                    android:id="@+id/sales_calendar_left_btn"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="bottom"
                                    android:background="@drawable/border"
                                    android:onClick="onClick"
                                    android:src="@drawable/ic_chevron_left_black_24dp"/>


                                <ImageButton
                                    android:id="@+id/sales_calendar_right_btn"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginRight="30dp"
                                    android:background="@drawable/border"
                                    android:onClick="onClick"
                                    android:src="@drawable/ic_chevron_right_black_24dp"/>
                            </LinearLayout>

                            <GridView
                                android:id="@+id/sales_calendar"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:numColumns="7"
                                android:overScrollMode="never">

                            </GridView>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/Key"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="5dp"
                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageButton
                                    android:id="@+id/sales_all_tv"
                                    android:layout_width="150dp"
                                    android:layout_height="60dp"
                                    android:background="@color/Key"
                                    android:onClick="onClick"
                                    android:scaleType="centerCrop"
                                    android:scaleY="3"
                                    android:src="@drawable/sales_categol_btn"
                                    />

                                <TextView
                                    android:id="@+id/sales_all_tv2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:background="@android:color/transparent"
                                    android:text="전체매출"
                                    android:textColor="@color/Key"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageButton
                                    android:id="@+id/sales_card_tv"
                                    android:layout_width="150dp"
                                    android:layout_height="60dp"
                                    android:background="@color/Key"
                                    android:onClick="onClick"
                                    android:scaleType="centerCrop"
                                    android:scaleY="3"
                                    />

                                <TextView
                                    android:id="@+id/sales_card_tv2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:background="@android:color/transparent"
                                    android:text="카드"
                                    android:textColor="@color/White"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageButton
                                    android:id="@+id/sales_cash_tv"
                                    android:layout_width="150dp"
                                    android:layout_height="60dp"
                                    android:background="@color/Key"
                                    android:onClick="onClick"
                                    android:scaleType="centerCrop"
                                    android:scaleY="3"
                                    />

                                <TextView
                                    android:id="@+id/sales_cash_tv2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:background="@android:color/transparent"
                                    android:text="현금"
                                    android:textColor="@color/White"/>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@color/Key">

                                <Button
                                    android:id="@+id/sales_list_day_btn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/sale_selec_btn"
                                    android:onClick="sales_list_filter_Click"
                                    android:text="일"
                                    android:textColor="@color/White"/>

                                <Button
                                    android:id="@+id/sales_list_month_btn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/sale_btn"
                                    android:onClick="sales_list_filter_Click"
                                    android:text="월"/>

                                <Button
                                    android:id="@+id/sales_list_year_btn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/sale_btn"
                                    android:onClick="sales_list_filter_Click"
                                    android:text="년"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sales_list"
                            android:layout_width="match_parent"
                            android:layout_height="459dp"
                            android:background="@drawable/border"
                            android:orientation="vertical">

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
