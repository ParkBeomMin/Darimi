<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="14"
    tools:context="com.example.jisung.darimi.OrderActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/left_side_bar"
        android:onClick="EonClick"
        android:orientation="vertical"
        android:weightSum="9">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/orderA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:text="주문" />

        <TextView
            android:background="@android:color/transparent"
            android:id="@+id/manageA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:onClick="onClick"
            android:text="고객관리" />

        <TextView
            android:background="@android:color/transparent"
            android:id="@+id/salesA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:onClick="onClick"
            android:text="매출" />

        <TextView
            android:background="@android:color/transparent"
            android:id="@+id/settingA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:onClick="onClick"
            android:text="설정" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:orientation="vertical"
        android:weightSum="9.2"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="EonClick"
            android:orientation="horizontal"
            android:weightSum="15">

            <TextView
                android:id="@+id/calcul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="계산기" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11.5" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="시간" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#EAEAEA"
            android:onClick="EonClick"
            android:weightSum="10">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:background="#EAEAEA" />
            <Button
                android:text="추가"
                android:id="@+id/item_add_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <Button
                android:text="위치"
                android:id="@+id/item_edit_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="EonClick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.7"

            android:background="@color/Background"
            android:orientation="horizontal"
            android:paddingBottom="40dp"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/edit_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="6"
                android:onClick="EonClick"
                android:orientation="vertical"
                android:weightSum="10">

                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/cate_list"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:background="#ddd">


                </it.sephiroth.android.library.widget.HListView>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8.7">

                    <GridView
                        android:id="@+id/item_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnWidth="100dp"
                        android:numColumns="3"
                        android:visibility="visible"></GridView>

                    <com.woxthebox.draglistview.DragListView
                        android:id="@+id/drag_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:onClick="EonClick"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:weightSum="10">

                <LinearLayout
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.65"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="고객명 : " />

                    <EditText
                        android:singleLine="true"
                        android:inputType="text"
                        android:id="@+id/client_name_E"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical" />

                    <Button
                        android:onClick="searchBtn"
                        android:padding="5dp"
                        android:textColor="@color/White"
                        android:id="@+id/client_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/round_btn_key2"
                        android:text="검색" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.65"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="전화번호 : " />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/client_number_E"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical" />

                    <Button
                        android:onClick="searchBtn"
                        android:padding="5dp"
                        android:textColor="@color/White"
                        android:id="@+id/number_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/round_btn_key2"
                        android:text="검색" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/Background"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">

                    <ListView
                        android:divider="@color/Background"
                        android:id="@+id/selected_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></ListView>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/Background"/>
                <LinearLayout
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="총 개수" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/item_total_num"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="주문날짜" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/item_order_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6" />

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/Background"/>
                <LinearLayout
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1.2"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:gravity="center_vertical"

                        android:textSize="28dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="합계" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"/>


                    <TextView
                        android:textSize="28dp"
                        android:id="@+id/selected_total"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/Key"
                        android:text="₩0" android:paddingRight="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:weightSum="1"
                    android:background="@color/Background">
                    <Button
                        android:onClick="payClick"
                        android:text="선불"
                        android:id="@+id/prepay"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:onClick="payClick"
                        android:text="후불"
                        android:id="@+id/afterpay"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <Button
                    android:id="@+id/order_btn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/Key2"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:text="주문" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
