<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="14"
    tools:context="com.example.jisung.darimi.SettingActivity">
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="9"
        android:background="@color/Key"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/Key"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/orderA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@color/Key"
            android:onClick="onClick"
            android:text="주문" />

        <TextView
            android:background="@color/Key"
            android:id="@+id/manageA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:onClick="onClick"
            android:text="고객관리" />

        <TextView
            android:background="@color/Key"
            android:id="@+id/salesA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:onClick="onClick"
            android:text="매출" />

        <TextView
            android:background="@color/Key2"
            android:id="@+id/settingA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:onClick="onClick"
            android:text="설정" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:background="@color/Background"
        android:orientation="vertical"
        android:weightSum="9.2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="15"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/calcul"
                android:text="계산기"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11.5"/>
            <TextView
                android:text="시간"
                android:id="@+id/time"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@color/Background"/>
        <LinearLayout
            android:background="@color/Background"
            android:orientation="horizontal"
            android:layout_weight="7.9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3.5"
                android:layout_marginRight="10dp"
                android:weightSum="10">
                <TextView
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/Key"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="할일리스트"/>
                <TextView
                    android:paddingLeft="20dp"
                    android:textColor="@color/Key"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:text="To do list"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/Background"/>
                <EditText
                    android:pointerIcon="zoom_in"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:paddingLeft="20dp"
                    android:hint="이름검색"/>
                <ExpandableListView
                    android:id="@+id/work_name_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.5"></ExpandableListView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"


                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="6.5"
                android:weightSum="10">
                <TextView
                    android:paddingLeft="20dp"
                    android:background="@color/Key"
                    android:textColor="@color/White"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="작업내역 확인"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:weightSum="10">
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/White"
                        android:background="@drawable/round_btn_key2"
                        android:id="@+id/class_all"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:onClick="work_onclick"
                        android:layout_height="match_parent"
                        android:text="전체"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/class_proceed"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="진행"
                        android:onClick="work_onclick"
                        />
                    <TextView
                        android:gravity="center"
                        android:onClick="work_onclick"
                        android:id="@+id/class_comple"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="작업완료"/>
                    <TextView
                        android:visibility="gone"
                        android:gravity="center"
                        android:onClick="work_onclick"
                        android:id="@+id/class_extire"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="수령완료"/>
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        />
                    <!--스피너로 바꿔야함-->

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/Background"/>
                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8.3"
                    android:id="@+id/work_list"
                    android:numColumns="2"></GridView>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
